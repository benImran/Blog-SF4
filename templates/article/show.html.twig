{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ article.description }}</td>
        </tr>
        <tr>
            <th>Img</th>
            {#<td>{{ article.img }}</td>#}
            <td><img style="max-width: 75px;"src="{{ absolute_url(asset('uploads/ProfilePics/' ~ article.img)) }}" alt=""></td>
        </tr>
        </tbody>
    </table>
    <div class="create-view">

        <a href="{{ path('article_index') }}">back to list</a>
    </div>
    <div class="create-view">

        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
    </div>
    <div class="create-view">
        {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}